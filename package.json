    "@types/koa-router": "^7.0.27",
    "chalk": "^2.3.0",
    "cross-env": "^5.1.3",
    "nodemon": "^1.14.11",
    "ts-node": "^4.1.0",
    "tslint": "^5.9.1",
    "typescript": "^2.6.2"
